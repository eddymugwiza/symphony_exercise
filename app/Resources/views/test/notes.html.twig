{% extends 'base.html.twig' %}

{% block body %}
    <table border="1" style="border: solid red; table-border-color-dark: blue">
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>
                    {% if note.note == 'Dejana' %}
                        <a href="{{ path('get_user',{'userName': note.note}) }}">Dejana</a>
                    {% else %}
                        {{ note.note }}
                    {% endif %}
                </td>
                <td>{{ note.updatedAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock body %}